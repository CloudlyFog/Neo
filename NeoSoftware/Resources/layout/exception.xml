<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3C4247">

    <TextView
            android:text="Exception"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#EAEA78"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:id="@+id/textView3"/>
    <TextView
            android:text="Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#A8AAB1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="100dp"
            android:id="@+id/message" android:layout_below="@+id/textView3"/>
    <TextView
            android:text="Inner Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#A8AAB1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/innerMessage" android:layout_below="@+id/message"/>

    <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="BackToManual"
            android:backgroundTint="#A8AAB1"
            app:srcCompat="?attr/actionModeCloseDrawable"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:id="@+id/back_to_manual_btn"/>
</RelativeLayout>