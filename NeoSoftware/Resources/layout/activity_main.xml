<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:padding="16dp"
                android:layout_width="match_parent" android:layout_height="match_parent">
    <SurfaceView android:id="@+id/surface_view" android:layout_width="379dp"

                 android:layout_height="536dp" android:layout_centerHorizontal="true"
                 android:layout_marginBottom="68dp" android:layout_alignBottom="@+id/button"/>
    <TextView android:id="@+id/txtview" android:text="No Text" android:textSize="20sp"
              android:textColor="@android:color/white" android:layout_width="190dp"
              android:layout_height="112dp"
              android:layout_marginBottom="47dp"
              android:layout_marginStart="1dp" android:layout_alignStart="@+id/surface_view"
              android:layout_marginTop="-6dp" android:layout_below="@+id/surface_view"/>
    <Button
            android:text="Solve"
            android:layout_width="141dp"
            android:layout_height="60dp"
            android:onClick="Solve"
            android:id="@+id/solveBtn"
            tools:ignore="TextContrastCheck" android:layout_marginEnd="109dp"
            android:layout_alignEnd="@+id/surface_view" android:layout_marginStart="111dp"
            android:layout_alignStart="@+id/surface_view"
            android:layout_alignParentBottom="true" android:layout_marginBottom="41dp"
            android:layout_centerHorizontal="true" android:layout_marginTop="25dp" android:layout_below="@+id/output"/>
    <TextView
            android:text="Output"
            android:layout_width="159dp"
            android:layout_height="112dp"
            android:id="@+id/output"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="0dp" android:layout_alignEnd="@+id/surface_view"
            android:layout_alignBottom="@+id/txtview"/>
</RelativeLayout>  