<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="180dp"
            android:layout_height="32dp" android:layout_alignParentStart="true"
            android:layout_marginStart="19dp" android:layout_alignParentTop="true" android:layout_marginTop="23dp"
            android:id="@+id/result_title"/>

    <TextView
            android:text="Input matrix:"
            android:layout_width="194dp"
            android:layout_height="108dp" android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" android:layout_alignParentTop="true" android:layout_marginTop="118dp"
            android:id="@+id/result_input" android:layout_alignParentBottom="true"
            android:layout_marginBottom="625dp" android:layout_alignParentEnd="true" android:layout_marginEnd="184dp"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Result:"
            android:layout_width="194dp"
            android:layout_height="108dp" android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" android:layout_alignParentTop="true" android:layout_marginTop="255dp"
            android:id="@+id/result_output" android:layout_alignParentBottom="true"
            android:layout_marginBottom="488dp" android:layout_alignParentEnd="true" android:layout_marginEnd="184dp"
            android:layout_centerHorizontal="true"/>

    <ImageButton
            android:layout_width="51dp"
            android:onClick="BackToManual"
            android:layout_height="46dp" app:srcCompat="?attr/actionModeCloseDrawable"
            android:layout_alignParentEnd="true" android:layout_marginEnd="21dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="34dp" android:id="@+id/back_to_manual_btn"/>

</RelativeLayout>