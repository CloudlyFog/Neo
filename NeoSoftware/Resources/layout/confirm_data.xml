<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <Button
            android:text="Confirm"
            android:layout_width="142dp"
            android:layout_height="52dp" android:layout_alignParentEnd="true"
            android:layout_marginEnd="135dp" android:layout_marginTop="329dp"
            android:id="@+id/confirm" android:layout_below="@+id/confirm_data_input"
            android:layout_alignParentStart="true" android:layout_marginStart="134dp"
            android:layout_centerInParent="true"/>
    <TextView
            android:text="Actual input"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp" android:layout_alignParentTop="true" android:layout_marginTop="189dp"
            android:id="@+id/actual_input_title" android:layout_alignStart="@+id/confirm"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:layout_marginStart="0dp" android:layout_alignParentTop="true" android:layout_marginTop="214dp"
            android:id="@+id/actual_input" android:layout_alignStart="@+id/confirm" android:layout_marginEnd="8dp"
            android:layout_alignEnd="@+id/confirm_text" android:layout_centerHorizontal="true"/>
</RelativeLayout>