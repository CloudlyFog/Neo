<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff00897b">
    <GridLayout android:layout_height="256dp" android:layout_width="369dp"
                android:id="@+id/matrix_grid"
                android:layout_gravity="center">

    </GridLayout>
    <Button
            android:text="Exponentiation"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:onClick="Exp"
            android:id="@+id/exp_btn"
            tools:ignore="TextContrastCheck"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#ff80cbc4"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="13dp" android:layout_below="@+id/det_btn" android:layout_marginStart="84dp"
            android:layout_alignStart="@+id/det_btn" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="Rank"
            android:onClick="Rank"
            android:id="@+id/rank_btn"
            android:backgroundTint="#ff80cbc4"
            tools:ignore="TextContrastCheck"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="188dp"
            android:layout_marginTop="390dp"/>
    <Button
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="Reverse"
            android:onClick="Reverse"
            android:id="@+id/reverse_btn"
            android:backgroundTint="#ff80cbc4"
            tools:ignore="TextContrastCheck"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="188dp"
            android:layout_marginTop="330dp"/>
    <Button
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="Transpose"
            android:onClick="Transpose"
            android:id="@+id/transpose_btn"
            android:backgroundTint="#ff80cbc4"
            tools:ignore="TextContrastCheck"
            android:layout_marginRight="188dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="330dp"/>
    <Button
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="Determinant"
            android:onClick="Determinant"
            android:id="@+id/det_btn"
            android:backgroundTint="#ff80cbc4"
            tools:ignore="TextContrastCheck"
            android:layout_marginRight="188dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="390dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:onClick="BackToRecognition"
            android:layout_height="wrap_content" app:srcCompat="?attr/actionModeCloseDrawable"
            android:layout_alignParentEnd="true" android:layout_marginEnd="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp" android:id="@+id/back_to_recognition"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="255dp" android:id="@+id/exp_value"/>
</RelativeLayout>  
