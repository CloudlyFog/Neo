<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff00897b">
    <GridLayout
            android:id="@+id/matrix_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

    </GridLayout>
    <Button
            android:text="Exponentiation"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:onClick="Exp"
            android:id="@+id/exp_btn"
            tools:ignore="TextContrastCheck"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#ff80cbc4"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="19dp" android:layout_below="@+id/det_btn" android:layout_marginStart="75dp"
            android:layout_alignStart="@+id/det_btn" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="Rank"
            android:onClick="Rank"
            android:id="@+id/rank_btn"
            android:backgroundTint="#ff80cbc4"
            tools:ignore="TextContrastCheck"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="188dp"
            android:layout_marginTop="390dp"/>
    <Button
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="Reverse"
            android:onClick="Reverse"
            android:id="@+id/reverse_btn"
            android:backgroundTint="#ff80cbc4"
            tools:ignore="TextContrastCheck"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="188dp"
            android:layout_marginTop="330dp"/>
    <Button
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="Transpose"
            android:onClick="Transpose"
            android:id="@+id/transpose_btn"
            android:backgroundTint="#ff80cbc4"
            tools:ignore="TextContrastCheck"
            android:layout_marginRight="188dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="330dp"/>
    <Button
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:text="Determinant"
            android:onClick="Determinant"
            android:id="@+id/det_btn"
            android:backgroundTint="#ff80cbc4"
            tools:ignore="TextContrastCheck"
            android:layout_marginRight="188dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="390dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:onClick="BackToRecognition"
            android:layout_height="wrap_content" app:srcCompat="?attr/actionModeCloseDrawable"
            android:layout_alignParentEnd="true" android:layout_marginEnd="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp" android:id="@+id/back_to_recognition"/>
    <EditText
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:gravity="center" android:layout_alignParentBottom="true"
            android:layout_marginBottom="242dp" android:id="@+id/exp_value" android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"/>
    <TextView
            android:text="Rows: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="17dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="121dp" android:id="@+id/textView"/>
    <EditText
            android:layout_width="98dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:gravity="center"
            android:id="@+id/rows_count"
            android:layout_alignParentStart="true" android:layout_marginStart="74dp"
            android:layout_marginBottom="-10dp"
            android:layout_toEndOf="@+id/rows_count" android:layout_alignBottom="@+id/textView"/>

    <TextView
            android:text="Columns: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="17dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp" android:id="@+id/textView1"/>
    <EditText
            android:layout_width="98dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:gravity="center"
            android:id="@+id/columns_count"
            android:layout_alignParentStart="true" android:layout_marginStart="74dp"
            android:layout_marginBottom="-10dp"
            android:layout_toEndOf="@+id/columns_count" android:layout_alignBottom="@+id/textView1"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp" android:layout_alignParentBottom="true" android:layout_marginBottom="12dp"
            android:id="@+id/submit_size"/>
    <TextView
            android:text="Exp value: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="251dp" android:id="@+id/textView2"
    />


</RelativeLayout>  
